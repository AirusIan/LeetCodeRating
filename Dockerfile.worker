# Build stage
FROM golang:1.23.9 AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

# 🔧 重要：禁用 CGO、強制編譯為 Linux binary
ENV CGO_ENABLED=0 GOOS=linux GOARCH=amd64

RUN go build -o worker ./worker/worker.go

# Runtime stage
FROM debian:bookworm-slim

WORKDIR /app

COPY --from=builder /app/worker .

CMD ["./worker"]
